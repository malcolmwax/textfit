{
  "name": "textfit",
  "version": "0.0.1",
  "description": "A JS library to make fitted text easier",
  "main": "src/textfit.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "build": "uglifyjs ./src/textfit.js -m -o ./dist/textfit.min.js",
    "publish": "npm run build && aws s3 cp dist/textfit.min.js s3://outfit-assets-production/scripts/textfit.min.js --acl public-read"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Outfitio/textfit.git"
  },
  "keywords": [
    "textfit",
    "fit",
    "text"
  ],
  "author": "Anh Nguyen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Outfitio/textfit/issues"
  },
  "homepage": "https://github.com/Outfitio/textfit#readme",
  "devDependencies": {
    "uglify-js": "^3.3.24"
  }
}
